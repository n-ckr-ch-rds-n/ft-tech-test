<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="//www.ft.com/__origami/service/build/v2/bundles/css?modules=o-fonts@^3,o-buttons@^3.0.0,o-header@^4.0.0" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></title></h1>
    <form action="/" method="post">
      <input class="searchbar" type="text" name="keyword" placeholder="Enter Keyword">
      <input class="o-buttons o-buttons--big" type="submit" value="Search"></button>
    </form>

    <% if (articles.length > 0) { %>
      <% articles[0].forEach((article) => { %>
        <div class="headline"><a href=<%= article.url %>><%= article.title %></a>
          <div class="date"><%= article.date %></div>
        </div>
      <% }) %>
    <% } %>
  </body>
</html>
